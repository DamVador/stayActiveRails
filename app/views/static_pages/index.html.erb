<%# <link rel="stylesheet" href="#{Rails.root}/app/assets/stylesheets/style.css"> %>
<main class="flex-shrink-0">
    <div class="p-5 mb-4 bg-light rounded-3 jumbotron">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Welcome on Stay Active</h1>
        <p class="col-md-8 fs-4">Practice sport with people around you. Join existing runs or create one to invite people to join you for exercising. Sign up to access it.</p>
        <button class="btn btn-primary btn-lg" type="button">Sign up</button>
      </div>
    </div>
    <div class="container">
        <ul>
        <% if user_signed_in? %>
            <li>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: {turbo_method: :delete} %>
            </li>

            <li>
            Voici ton email : <%= current_user.email %>
            </li>

            <li>
            <%= link_to "Secret page", static_pages_secret_path %>
            </li>

            <li>
            <%= link_to "Edit email / password", edit_user_registration_path %>
            </li>

        <% else %>
            <li>    
            <%= link_to "Sign in", new_user_session_path %>
            </li>

            <li>
            <%= link_to "Sign up", new_user_registration_path %>
            </li>

        <% end %>
        </ul>
    </div>
</main>